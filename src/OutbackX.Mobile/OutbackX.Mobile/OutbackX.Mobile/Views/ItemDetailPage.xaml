<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OutbackX.Mobile.Views.ItemDetailPage"
             Title="{Binding Title}">

    <StackLayout Spacing="20" Padding="15">
        <Label Text="Unidade:" FontSize="Medium" />
        <Label Text="{Binding Unidade}" FontSize="Small"/>
        <Label Text="Endereço:" FontSize="Medium" />
        <Label Text="{Binding Endereco}" FontSize="Small"/>
        <Label Text="Número:" FontSize="Medium" />
        <Label Text="{Binding Numero}" FontSize="Small"/>
        <Label Text="Complemento:" FontSize="Medium" />
        <Label Text="{Binding Complemento}" FontSize="Small"/>
        <Label Text="Bairro:" FontSize="Medium" />
        <Label Text="{Binding Bairro}" FontSize="Small"/>
        <Label Text="Cidade:" FontSize="Medium" />
        <Label Text="{Binding Cidade}" FontSize="Small"/>
        <Label Text="Estado:" FontSize="Medium" />
        <Label Text="{Binding Estado}" FontSize="Small"/>
        <Label Text="CEP:" FontSize="Medium" />
        <Label Text="{Binding CEP}" FontSize="Small"/>
    </StackLayout>
    
</ContentPage>